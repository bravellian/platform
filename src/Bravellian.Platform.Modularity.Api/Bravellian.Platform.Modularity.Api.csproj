<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Deterministic>true</Deterministic>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Bravellian.Platform.Modularity.Api</PackageId>
    <Version>1.0.0</Version>
    <Authors>Bravellian</Authors>
    <Owners>Bravellian</Owners>
    <Description>API-focused module infrastructure for ASP.NET Core.</Description>
    <PackageProjectUrl>https://github.com/bravellian/platform</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/bravellian/platform</RepositoryUrl>
    <PackageIcon>nuget_logo.png</PackageIcon>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>NU5123</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Bravellian.Platform.Modularity.Core\Bravellian.Platform.Modularity.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\assets\nuget_logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
